<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines For Ads</p>
    <ul>
      <li>Free Stuff is encouraged.</li>
      <li>Don't target pets, they can't use a mouse!</li>
      <li>Make sure it's "PC".</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Ad Title..." %>
      </div>
      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter Ad Description..." %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control', placeholder: "Enter Price Here..." %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
